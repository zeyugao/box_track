{
    "name": "Box track",
    "description": "Track the box for Frozen II",
    "image": "heroku/python",
    "repository": "https://github.com/zeyugao/box_track",
    "keywords": [
        "python",
        "django"
    ],
    "addons": [
        "heroku-postgresql"
    ],
    "env": {
        "SECRET_KEY": {
            "description": "The secret key for the Django application.",
            "generator": "secret"
        }
    },
    "environments": {
        "test": {
            "scripts": {
                "test-setup": "python manage.py collectstatic --noinput",
                "test": "python manage.py test"
            }
        }
    }
}